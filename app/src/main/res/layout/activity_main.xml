<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="24sp"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:inputType="number"
        android:textSize="24sp"

        />

    <EditText
        android:id="@+id/editTextClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Class"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/editTextSabaq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sabaq"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/editTextSabaqi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sabaqi"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/editTextManzil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Manzil"
        android:inputType="number"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/buttonAddStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Student" />

    <Button
        android:id="@+id/buttonRetrieveStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrieve Students" />

    <TextView
        android:id="@+id/textViewStudentRecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="?android:textAppearanceMedium" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/item_student" />

</LinearLayout>
