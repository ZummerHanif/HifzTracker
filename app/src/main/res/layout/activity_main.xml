<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="24sp"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:inputType="number"
        android:textSize="24sp"

        />

    <EditText
        android:id="@+id/editTextRollNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Roll No"
        android:inputType="numberSigned"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Class"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/btnAddStudent"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:text="Add Student"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btnAddRecord"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:text="Add or Update Record"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/btnSearch"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:text="Search Student"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/buttonShowRecyclerView"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="View All Students"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/textViewStudentRecords"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="50dp"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewClass"
        android:layout_width="1107dp"
        android:layout_height="9dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginLeft="50dp"/>
    <TextView
        android:id="@+id/textViewAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="50dp"
         />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="691dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="50dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout="@layout/item_student"
        android:visibility="gone"
        android:layout_marginLeft="50dp"/>

</LinearLayout>
